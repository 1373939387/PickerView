<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/ll_tob"
        android:padding="10dp">

        <TextView
            android:id="@+id/tv_cancel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="取消"
            android:textColor="@color/color_3"
            android:textSize="18sp" />

        <LinearLayout
            android:id="@+id/ll_tob"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_centerInParent="true"
            android:background="@drawable/shape_round_corner_notify_obj"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/rb_go_in"
                android:layout_width="100dp"
                android:layout_height="match_parent"
                android:background="@drawable/notify_obj_round_left"
                android:gravity="center"
                android:text="开始时间"
                android:textColor="@color/white"
                android:textSize="14dp" />

            <TextView
                android:id="@+id/rb_go_out"
                android:layout_width="100dp"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="结束时间"
                android:textColor="@color/blueLight"
                android:textSize="14sp" />

        </LinearLayout>

        <TextView
            android:id="@+id/tv_confirm"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:gravity="center"
            android:text="确定"
            android:textColor="@color/color_3"
            android:textSize="18sp" />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/ll_birth"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:background="@color/color_f7">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:gravity="center">

            <com.haoruigang.pickerview.CustomNumberPicker
